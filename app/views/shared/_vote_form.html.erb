<div class="vote_form">
  <% if vote = post.votes.find_by_user_id(session[:user_id]) %>
    <%=link_to "upvote", post_vote_path(post, vote, value: 1), remote: true, method: :put %>
    <%=link_to "downvote", post_vote_path(post, vote, value: -1), remote: true, method: :put %>

  <% else %>
    <%#= link_to "upvote", post_votes_path(post, value: 1), remote: true, method: :post %>
    <%#= link_to "downvote", post_votes_path(post, value: -1), remote: true, method: :post %>
   <%= form_for :vote, url: post_votes_path(post.id), remote: true do |f| %>
     <%= f.button 'Upvote', name: 'value', value: 1 %>
     <%= f.button 'Downvote', name: 'value', value: -1 %>
  <% end %>
</div>
