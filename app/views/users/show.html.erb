<div class="user_show">
  <h1>Hello User!</h1>

  <%= @user.username %>

  <% if @user.posts %>
    Here are your questions!
    <% @user.posts.each do |user_post|  %>
      <% if user_post.question %>
        <br><%= link_to user_post.body, post_path(user_post) %>
        <% end %>
    <% end %>
  <% end  %>



</div>
